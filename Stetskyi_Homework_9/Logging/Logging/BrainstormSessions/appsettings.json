{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Email", "BrainstormSessions" ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Fatal",
        "Microsoft.AspNetCore": "Fatal",
        "System": "Fatal"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
                "formatter": "Serilog.Formatting.Compact.RenderedCompactJsonFormatter, Serilog.Formatting.Compact"
              }
            }
          ]
        }
      },
      {
        "Name": "CustomEmail",
        "Args": {
          "ConnectionInfo": {
            "NetworkCredentials": {
              "UserName": "onemangamestudio2015@gmail.com",
              "Password": "{HereSHouldBePassword}"
            },
            "FromEmail": "onemangamestudio2015@gmail.com",
            "MailServer": "smtp-relay.gmail.com",
            "EmailSubject": "[{Level}] Log Email",
            "Port": "587",
            "IsBodyHtml": false,
            "EnableSsl": true,
            "ToEmail": "Ihor_Stetskyi@epam.com"
          },
          "RestrictedToMinimumLevel": "Verbose",
          "OutputTemplate": "{Timestamp:yyyy-MM-dd HH:mm} [{Level}] {Message}{NewLine}{Exception}"
        }
      } //,
